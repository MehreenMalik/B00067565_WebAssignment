{
    "require":
    {
        "twig/twig": "^1.22",
        "silex/silex": "^1.3",
        "mattsmithdev/pdo-crud-for-free": "dev-master"
    },
    "autoload":
    {
        "psr-4" :
        {
            "Hdip\\Controller\\": "src/controllers",
            "Hdip\\Model\\": "src/model",
            "Hdip\\":"src/"
        }
    },
    "scripts" :
    {
        "phpunit": "php phpunit-5.3.2.phar --log-tap tests/log/phpunit.log",
        "phpunit-coverage":"php phpunit.phar --coverage-html ./tests/coverage",
        "phpdoc": "php phpDocumentor.phar -d ./src -t ./src/documentation --template=responsive-twig"
    }
}

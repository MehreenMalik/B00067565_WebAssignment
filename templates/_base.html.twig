<!doctype html>
<html lang="en">
<head>
    <title>MMA- {% block pageTitle %}{% endblock %}</title>
    <meta charset="utf-8">
    <style>
        @import "css/style.css";
        @import "css/naviagtion.css";
    </style>
</head>
<body>

<!-- login header -->
<header>
        <img id="logo" src="images/logo.png">
    <!-- nav -->
    <nav>
        <nav>
            <ul>
                <li>
                    <a href="/">home</a>
                </li>
                <li>
                    <a href="/about">about</a>
                </li>
            </ul>

            {# --------- secure links - only if logged in ----------- #}
            {% if username %}
                {% include 'admin/_adminLinks.html.twig'  %}
            {% endif %}
        </nav>
    </nav>

    <!-- login / logout -->
    <section>
        {% if username %}
            you are logged in as: {{ username }}
            <br>
            <a href="/logout">logout</a>
        {% else %}
            <a href="/login">Login</a>
        {% endif %}
    </section>
</header>

<hr>

{% block main %}
{% endblock %}

</body>
</html>
